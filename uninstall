#!/bin/bash
# install plotting scripts
# if you do not have root privaliges run insall [directory]
# with a directory in the system path


DIR=$( pwd )
INSTALL=${1:-/usr/bin}

if [ $INSTALL = /usr/bin ]
  then sudo rm $INSTALL/plot_SQUID_data
    sudo rm $INSTALL/plot_4circle_data
    sudo rm $INSTALL/plot_reflectometer_data
    sudo rm $INSTALL/psd
    sudo rm $INSTALL/p4d
    sudo rm $INSTALL/prd
    sudo rm $INSTALL/pin12
    sudo rm $INSTALL/dnsplot
    sudo rm $INSTALL/plot.py
  else rm $INSTALL/plot_SQUID_data
    ln rm $INSTALL/plot_4circle_data
    ln rm $INSTALL/plot_reflectometer_data
    ln rm $INSTALL/psd
    ln rm $INSTALL/p4d
    ln rm $INSTALL/prd
    ln rm $INSTALL/pin12
    ln rm $INSTALL/dnsplot
    ln rm $INSTALL/plot.py
fi
