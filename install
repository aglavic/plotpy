#!/bin/bash
# install plotting scripts
# if you do not have root privaliges run insall [directory]
# with a directory in the system path


DIR=$( pwd )
INSTALL=${1:-/usr/bin}

if [ $INSTALL = /usr/bin ]
  then sudo ln -s $DIR/scripts/plot_SQUID_data $INSTALL/plot_SQUID_data
    sudo ln -s $DIR/scripts/plot_4circle_data $INSTALL/plot_4circle_data
    sudo ln -s $DIR/scripts/plot_reflectometer_data $INSTALL/plot_reflectometer_data
    sudo ln -s $DIR/scripts/psd $INSTALL/psd
    sudo ln -s $DIR/scripts/p4d $INSTALL/p4d
    sudo ln -s $DIR/scripts/prd $INSTALL/prd
    sudo ln -s $DIR/scripts/pin12 $INSTALL/pin12
    sudo ln -s $DIR/scripts/dnsplot $INSTALL/dnsplot
    sudo ln -s $DIR/scripts/treffplot $INSTALL/treffplot
    sudo ln -s $DIR/plot.py $INSTALL/plot.py
  else ln -s $DIR/scripts/plot_SQUID_data $INSTALL/plot_SQUID_data
    ln -s $DIR/scripts/plot_4circle_data $INSTALL/plot_4circle_data
    ln -s $DIR/scripts/plot_reflectometer_data $INSTALL/plot_reflectometer_data
    ln -s $DIR/scripts/psd $INSTALL/psd
    ln -s $DIR/scripts/p4d $INSTALL/p4d
    ln -s $DIR/scripts/prd $INSTALL/prd
    ln -s $DIR/scripts/pin12 $INSTALL/pin12
    ln -s $DIR/scripts/dnsplot $INSTALL/dnsplot
    ln -s $DIR/scripts/treffplot $INSTALL/treffplot
    ln -s $DIR/plot.py $INSTALL/plot.py
fi
